    "url": "https://github.com/zoltanfodor/cucumber-js-ui-automation/issues"
  },
  "homepage": "https://github.com/zoltanfodor/cucumber-js-ui-automation#readme",
  "devDependencies": {
    "@cucumber/cucumber": "^8.6.0",
    "@playwright/test": "^1.23.4",
    "cucumber-html-reporter": "^5.5.0",
    "playwright": "^1.26.1"
  }
}
